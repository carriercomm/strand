<div class="date"><em><%= @node.time.strftime("%B %d, %Y %I:%M%p") %></em></div>
<article>
<h1 class="article-title"><%= @title %></h1>
<% if @node.content && @node.content.is_a?(Hash) %>
	<% @node.content.each do |fieldname, fieldcontent| %>
		<% if fieldname != 'title' %>
		<div class="<%= fieldname %>"><%= fieldcontent %></div>
		<% end %>
	<% end %>
<% end %>
</article>